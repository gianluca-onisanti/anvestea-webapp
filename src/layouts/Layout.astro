---
interface Props {
	id?: string;
	title: string;
}

const { id, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="container" onload="javascript:handler()">
			<slot />
		</div>
	</body>
</html>

<script type="text/javascript">
	function handler() {
		var xhttp = new XMLHttpRequest();
		xhttp.onreadystatechange = function () {
			if (this.readyState == 4 && this.status == 200) {
				document.getElementById("container").innerHTML =
					this.responseText;
			}
		};
		xhttp.open("GET", "notify.asp", true);
		xhttp.send();
	}
</script>

<style is:global>
	@font-face {
		font-family: "cassol";
		src: url("/fonts/Gotham-Bold.otf") format("opentype");
	}

	@font-face {
		font-family: "cassol-light";
		src: url("/fonts/Gotham-Light.otf") format("opentype");
	}

	@font-face {
		font-family: "cassol-book";
		src: url("/fonts/GothamBook.ttf") format("truetype");
	}

	html {
		font-family: system-ui, sans-serif;
		background: rgb(19, 16, 1);
		scroll-behavior: smooth;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	main {
		margin-left: 305px;
		padding: 1rem;
		width: 980px !important;
		max-width: calc(100% - 2rem);
		color: rgb(255, 255, 255);
		font-size: 20px;
		line-height: 1.6;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.letter {
		color: #f2aa00;
		font-family: cassol;
	}

	.instructions {
		text-align: center;
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	::-webkit-scrollbar {
		width: 4px;
	}

	::-webkit-scrollbar-track {
		background: transparent;
	}

	::-webkit-scrollbar-thumb {
		background-color: #f2aa00;
		border-radius: 4px;
		transition: background-color 0.3s ease;
	}

	::-webkit-scrollbar-thumb:hover {
		background-color: #f5c242;
	}

	.bold {
		font-weight: bold;
	}

	.title {
		margin-bottom: 40px;
	}

	.item {
		margin-top: 75px;
		margin-bottom: 30px;
	}

	.gap-close {
		margin-bottom: -30px;
	}

	.item hr {
		width: 300px;
	}

	.item h3 {
		text-align: center;
		justify-content: center;
		height: 20px;
	}

	/* CASO NÃO FOR O PRIMEIRO TÍTULO, NÃO MARGEIA ACIMA */
	.title:not(:first-of-type) {
		margin-top: 100px;
	}

	.material-icons {
		margin-right: 10px;
	}

	.side-content {
		direction: ltr;
	}

	.sidelist {
		font-family: "cassol";
		background: rgb(19, 16, 1);
		color: #f2aa00;
		position: fixed;
		width: 240px;
		right: 0;
		top: 0;
		height: 100vh;
		box-sizing: border-box;
		overflow-y: scroll;
		direction: rtl;
		border-left: 2px solid transparent; /* Define a borda como transparente */
		border-image: linear-gradient(
				to bottom,
				transparent 5%,
				#f2aa0050 25%,
				#f2aa00 50%,
				#f2aa0050 75%,
				transparent 95%
			)
			1;
	}
	.sidelist::-webkit-scrollbar {
		width: 2px; /* Largura da barra de rolagem */
	}

	.sidelist h4 {
		margin-left: 20px;
	}

	.sidelist ul {
		font-family: "cassol-light";
		list-style: none;
		padding: 0;
		margin-left: 20px;
	}

	.sidelist li {
		font-size: 13px;
		margin-bottom: 5px;
	}

	.sidelist span {
		margin-right: 15px !important;
	}

	.center {
		display: flex;
		justify-content: center;
	}

	.super {
		display: flex;
		margin-top: 20px;
		margin-bottom: 10px;
	}

	.sub {
		font-size: 12px;
	}

	a {
		color: #f2aa00;
		text-decoration: none;
		border-radius: 10px;
		transition: all 0.5s ease-in-out;
	}

	a:hover {
		width: fit-content;
		background-image: linear-gradient(
			to right,
			transparent 5%,
			#f2aa0025 25%,
			#f2aa0050 50%,
			#f2aa0025 75%,
			transparent 95%
		);
	}

	.sidelist a:hover {
		background-image: linear-gradient(
			to right,
			transparent 5%,
			#f2aa0025 25%,
			#f2aa0050 50%,
			#f2aa0025 75%,
			transparent 95%
		);
		background-size: 200% 100%;
		background-position: 100%;
	}

	.sidelist a:active {
		color: #ffffff;
		transition: transform 0.5s ease-in-out;
	}

	div.code_box pre {
		transition: all 0.2s ease-in-out;
		color: #ffffff !important;
		background-color: transparent !important;
	}

	div.code_box:hover pre {
		transition: all 0.2s ease-in-out;
		background-color: #f2aa0010;
		color: #f2aa00 !important;
	}

	.code_box {
		font-size: 15px;
		width: fit-content;
		background-color: #ffffff10;
		padding: 20px;
		border-radius: 30px;
		margin: 0 auto;
		transition: all 0.2s ease-in-out;
		margin-top: 50px;
		margin-bottom: 50px;
	}

	.code_box:hover {
		transition: all 0.2s ease-in-out;
		background-color: #f2aa0010;
		color: #f2aa00 !important;
	}

	.image {
		transition: transform 0.4s ease-in-out;
	}

	.image-container {
		display: flex;
		justify-content: center;
		margin-top: 50px;
		margin-bottom: 50px;
	}

	.image:hover {
		transform: scale(1.3);
		box-shadow: -2000px 2000px 2000px 2000px #00000099;
		transition: all 0.4s ease-in-out;
	}

	.note {
		text-align: center;
		margin-top: 50px;
		margin-bottom: 50px;
		transition: all 0.3s ease-in-out;
		font-size: 18px;
		width: fit-content;
		border-radius: 30px;
		background-color: #f2aa0010;
		padding: 20px;
	}

	.note:hover {
		transition: all 0.3s ease-in-out;
		color: #f2aa00;
	}

	.link {
		margin-top: 50px;
		margin-bottom: 50px;
		border-radius: 20px;
		width: fit-content;
	}

	.end {
		margin-top: 50px;
	}

	.link:not(:hover) {
		transition: all 0.3s ease-in-out;
	}

	.link:hover {
		background-color: #f2aa0030;
		transition: all 0.3s ease-in-out;
	}

	.sidemenu {
		font-family: "cassol-light";
		font-weight: 800;
		position: fixed;
		left: 0;
		top: 0;
		height: 100%;
		max-height: 100vh;
		width: 270px; /* Largura desejada */
	}

	.header {
		border-bottom: 2px solid transparent; /* Define a borda como transparente */
		border-image: linear-gradient(
				to right,
				transparent 0%,
				#f2aa0050 25%,
				#f2aa00 50%,
				#f2aa0050 75%,
				transparent 100%
			)
			1;
		margin-bottom: 15px;
	}

	.sidemenu h2 {
		text-align: center;
		padding: 10px 20px;
		font-family: cassol;
		color: #f2aa00;
	}

	.sidemenu p {
		font-size: small;
		color: white;
		text-align: center;
		display: flex;
		position: absolute;
		left: 80px;
		top: 40px;
	}

	.sidemenu nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.sidemenu nav ul li a {
		font-size: 85%;
		margin-left: 10px;
		display: flex;
		align-items: center;
		width: 215px;
		padding: 10px 20px;
		text-decoration: none;
		color: #ffffff;
		overflow-wrap: break-word;
	}

	.sidemenu nav ul li a .material-icons {
		margin-right: 20px;
	}

	.sidemenu nav ul li a:hover {
		color: #f2aa00;
		background-color: #f2aa0020;
	}

	.active::before {
		border-right: 4px solid #f2aa00;
		content: "";
		position: absolute;
		left: 0;
		right: 0;
		top: 50%;
		transform: translateY(-50%);
		height: 60%;
		z-index: -1;
	}

	.active {
		position: relative;
		color: #f2aa00 !important;
	}

	.link-card {
		justify-content: center;
		text-align: center;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #f2aa00;
		background-image: none;
		background-size: 400%;
		border-radius: 100px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 100px;
		color: rgb(29, 22, 0);
		background-color: #f2aa00;
		opacity: 0.8;
	}

	.link-card h2 {
		font-family: cassol;
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card p {
		font-family: cassol-light;
		font-size: medium;
		font-weight: 700;
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #ffffff;
	}

	.fade-in {
		position: fixed;
		opacity: 0;
		transform: translateY(-25px);
		transition:
			opacity 1s ease,
			transform 1s ease;
	}

	.fade-in.visible {
		opacity: 1;
		transform: translateY(0);
	}
</style>
