---
interface Props {
	id?: string;
	title: string;
}

const { id, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{"Anvestea's Accord - " + title}</title>
	</head>
	<body>
		<div id="container" onload="javascript:handler()">
			<slot />
		</div>
	</body>
</html>

<script type="text/javascript">
	function handler() {
		var xhttp = new XMLHttpRequest();
		xhttp.onreadystatechange = function () {
			if (this.readyState == 4 && this.status == 200) {
				document.getElementById("container").innerHTML =
					this.responseText;
			}
		};
		xhttp.open("GET", "notify.asp", true);
		xhttp.send();
	}
</script>

<link
	rel="stylesheet"
	href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
/>

<style is:global>
	@font-face {
		font-family: "anvestea";
		src: url("/fonts/anvestea.ttf") format("truetype");
	}

	@font-face {
		font-family: "tahu";
		src: url("/fonts/tahu.ttf") format("truetype");
	}

	html {
		font-family: system-ui, sans-serif;
		background: #150b0b;
		scroll-behavior: smooth;
	}

	main {
		margin-left: 305px;
		padding: 1rem;
		width: 980px !important;
		max-width: calc(100% - 2rem);
		color: #f1e7e7;
		font-size: 20px;
		line-height: 1.6;
	}

	@media (width: 1280px) {
		main {
			padding: 0px 0px 0px 60px;
			width: 600px !important;
		}
	}

	@media (width: 1280px) {
		main {
			padding: 0px 0px 0px 60px;
			width: 600px !important;
		}
	}

	@media (min-width: 1281px) {
		main {
			padding: 0px 0px 0px 60px;
